{
	"name": "doma",
	"description": "Parse an HTML string into `DocumentFragment` or one `Element`, in a few bytes (in browser)",
	"version": "1.0.0",
	"repository": "bfred-it/doma",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"parse html",
		"domify",
		"vanilla",
		"jquery",
		"dom",
		"browser",
		"string to dom",
		"innerhtml",
		"outerhtml"
	],
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.2.1",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"ava": "^1.3.1",
		"eslint-config-xo-typescript": "^0.8.0",
		"jsdom": "^14.0.0",
		"typescript": "^3.3.3333",
		"xo": "*"
	},
	"scripts": {
		"test": "tsc && xo !index.js && ava",
		"prepare": "tsc",
		"build": "tsc",
		"watch": "tsc --watch"
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"envs": [
			"browser"
		]
	}
}

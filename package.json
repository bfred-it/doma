{
	"name": "doma",
	"version": "3.0.0",
	"description": "Parse an HTML string into `DocumentFragment` or one `Element`, in a few bytes (in browser)",
	"keywords": [
		"browser",
		"dom",
		"domify",
		"innerhtml",
		"jquery",
		"outerhtml",
		"parse html",
		"string to dom",
		"vanilla"
	],
	"repository": "fregante/doma",
	"license": "MIT",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "tsc",
		"test": "tsc && xo && ava",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignore": [
			"test.jsdom.js"
		],
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"rules": {
			"import/extensions": "off",
			"unicorn/import-index": "off",
			"import/no-useless-path-segments": "off"
		}
	},
	"ava": {
		"nodeArguments": [
			"--experimental-modules"
		]
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"ava": "^3.6.0",
		"jsdom": "^16.2.2",
		"typescript": "^3.8.3",
		"xo": "^0.28.3"
	}
}
